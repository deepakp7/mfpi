<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.communityfinance" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.communityfinance.activities.GroupsGridActivity"
            android:label="@string/title_activity_groups_grid"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.communityfinance.activities.AddGroupActivity"
            android:label="@string/title_activity_add_group" >
        </activity>
        <activity
            android:name=".activities.GroupLandingActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_group_landing" >
        </activity>
    </application>

</manifest>
