<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:id="@+id/layout_member_uid"
        android:layout_width="0dp"
        android:layout_height="0dp" android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:text="FirstName"
            android:layout_height="wrap_content" android:layout_width="200dp"
            android:layout_gravity="center"
            android:padding="10dp"/>
        <EditText android:id="@+id/edit_member_firstname"
            android:layout_height="wrap_content" android:layout_width="400dp"
            android:padding="10dp"
            android:inputType="textNoSuggestions"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:text="LastName"
            android:layout_height="wrap_content" android:layout_width="200dp"
            android:layout_gravity="center"
            android:padding="10dp"/>
        <EditText android:id="@+id/edit_member_lastname"
            android:layout_height="wrap_content" android:layout_width="400dp"
            android:padding="10dp"
            android:inputType="textNoSuggestions"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView android:text="Contact"
            android:layout_height="wrap_content" android:layout_width="200dp"
            android:layout_gravity="center"
            android:padding="10dp"/>
        <EditText android:id="@+id/edit_member_contact"
            android:layout_height="wrap_content" android:layout_width="400dp"
            android:padding="10dp"
            android:inputType="textNoSuggestions"/>
    </LinearLayout>

</LinearLayout>